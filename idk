/* 
 Arduino Dice :)
 This example shows how to simulate throwing a dice with 6 LEDs
 By Esther van der Stappen
 */

// 6 consecutive digital pins for the LEDs
int first = 13;
int second = 12;
int third = 11;
int fourth = 10;
int fifth = 9;
int sixth = 8;
int leds[6] = {13, 12, 11, 10, 9, 8};
// pin for the button switch
int button = 2;
// value to check state of button switch
int pressed;

void setup() {
  // set all LED pins to OUTPUT
  for(int i = 0; i < 6; i++) {
   pinMode(leds[i], OUTPUT);
  

   }
   
  // set buttin pin to INPUT
  pinMode(button, INPUT);
  // initialize random seed by noise from analog pin 0 (should be unconnected)
  randomSeed(analogRead(0));
}

void loop() {
  digitalWrite(8, LOW);
  // if button is pressed - throw the dice
     for(int i = 0; i < 6; i++) {
   digitalWrite(leds[i], LOW);
     }
  pressed = digitalRead(button);
  
  if (pressed == LOW) 
 {
    // remove previous number to LOW
    
    // get a random number in the range [1,6]
    int die = random(1,7);
    
    //write IF statements to light up the lights
    digitalWrite(leds[0], HIGH);
    for(int i = 1; i < 6; i++) {
      if (die >= i + 1){
        digitalWrite(leds[i], HIGH);
      }
    }    
    
  }
  else if (pressed == HIGH) {
    for (int i = 0; i < 6; i++) {
      digitalWrite(leds[i], LOW);
    }
  }
  }
